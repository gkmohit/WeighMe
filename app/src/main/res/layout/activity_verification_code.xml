<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15"
    tools:context="com.mohitkishore.www.weighme.VerificationCodeActivity">

    <TextView
        android:id="@+id/verification_intro_text"
        style="@style/text_style_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="@string/verification_text"/>

    <EditText
        android:id="@+id/verification_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_intro_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:hint="@string/verification_hint"
        android:maxLength="6"
        android:padding="@dimen/dp_10"/>

    <at.markushi.ui.CircleButton
        android:layout_width="@dimen/circleButtonDimen"
        android:layout_height="@dimen/circleButtonDimen"
        android:layout_alignParentRight="true"
        android:layout_below="@id/verification_edit_text"
        android:src="@drawable/ic_arrow_forward"
        />

</RelativeLayout>
